@model List<Dominio.Troca>

<h3 style="padding-bottom: 7px;">Lista de Trocas</h3>
<br />

<div class="table-responsive">
    <table class="table table-hover table-condensed">
        <thead>
            <tr class="active">
                <th><strong>Nome do Cliente</strong></th>
                <th><strong>Nome do Produto</strong></th>
                <th><strong></strong></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var troca in Model.OrderBy(troc => troc.Nome))
            {
                <tr>
                    <td>@Html.DisplayFor(troc => troca.Nome)</td>
                    <td>@Html.DisplayFor(troc => troca.NomeProduto)</td>
                   
                    @*<td class="text-center">
                        <strong>@Html.ActionLink("Editar", "RecuperaColaborador", new { id = colaborador.Id })</strong>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>