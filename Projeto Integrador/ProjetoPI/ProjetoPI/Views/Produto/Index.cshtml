@model List<Dominio.Produto>

<h3 style="padding-bottom: 7px;">Lista de Vendedores</h3>
<br />

<div class="table-responsive">
    <table class="table table-hover table-condensed">
        <thead>
            <tr class="active">
                <th><strong>Codigo</strong></th>
                <th><strong>Nome do Produto</strong></th>
                <th><strong>Un Medida</strong></th>
                <th><strong></strong></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model.OrderBy(prodt => prodt.NomeProduto))
            {
                <tr>
                    <td>@Html.DisplayFor(ven => produto.CodigoPro)</td>
                    <td>@Html.DisplayFor(troc => produto.NomeProduto)</td>
                    <td>@Html.DisplayFor(troc => produto.UnidadeMedida)</td>

                    <td class="text-center">
                        <strong>@Html.ActionLink("editar", "RecuperaProduto", new { id = produto.Id })</strong>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>